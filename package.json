{
  "name": "@roleup/rerror",
  "description": "RoleUp error class",
  "version": "1.0.2",
  "author": "Eric Hacke",
  "bugs": {
    "url": "https://github.com/roleup/rerror/issues"
  },
  "dependencies": {
    "http-status": "^1.3.1"
  },
  "devDependencies": {
    "@roleup/eslint-config": "^1.0.1",
    "@roleup/prettier-config": "^1.0.2",
    "chai": "^4.2.0",
    "eslint": "^6.0.1",
    "husky": "^3.0.0",
    "jsdoc": "^3.5.5",
    "jsdoc-to-markdown": "^5.0.0",
    "mocha": "^6.0.2",
    "nyc": "^14.1.1",
    "prettier": "^1.18.2"
  },
  "engines": {
    "node": ">=8"
  },
  "files": [
    "index.js"
  ],
  "homepage": "https://github.com/roleup/rerror#readme",
  "husky": {
    "hooks": {
      "pre-commit": "fixpack && npm run docs && LIST=`git diff-index --cached --name-only HEAD | grep '.*\\.js' | grep -v json`; if [ \"$LIST\" ]; then npm run lint && git add $LIST; fi"
    }
  },
  "keywords": [
    "error"
  ],
  "license": "MIT",
  "main": "index.js",
  "nyc": {
    "exclude": [
      "coverage/**",
      "tests/**",
      "scratch.js"
    ],
    "reporter": [
      "html",
      "text",
      "text-summary",
      "lcov"
    ],
    "all": true
  },
  "prettier": "@roleup/prettier-config",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/roleup/rerror.git"
  },
  "scripts": {
    "docs": "jsdoc2md --template README.template --files \"index.js\" > README.md",
    "lint": "eslint \"**/*.js\" --fix",
    "test": "npm run unit && npm run lint",
    "unit": "nyc mocha --use_strict --exit \"tests/**/*.unit.js\""
  }
}
